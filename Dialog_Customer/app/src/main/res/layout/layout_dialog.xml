<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80a7fa">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login System"
        android:id="@+id/textViewLogSys"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#f00"
        android:textSize="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUser"
        android:layout_below="@+id/textViewLogSys"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:hint="Input Username"
        android:textSize="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPass"
        android:layout_below="@+id/editTextUser"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:hint="Input Password"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/buttonLogin"
        android:layout_below="@+id/editTextPass"
        android:layout_alignStart="@+id/textViewLogSys" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/buttonCancel"
        android:layout_below="@+id/editTextPass"
        android:layout_toEndOf="@+id/editTextUser" />
</RelativeLayout>