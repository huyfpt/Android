<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ee91a674"
    tools:context="com.demo29.jsonserver.Update_item">
    <TextView
        android:id="@+id/textviewTitleUpdate"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#ff00"
        android:textSize="34sp"
        android:text="Update items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editTextUname"
        android:layout_marginTop="30dp"
        android:layout_below="@id/textviewTitleUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editTextUprice"
        android:layout_below="@id/editTextUname"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editTextUdetails"
        android:maxLines="5"
        android:layout_below="@id/editTextUprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/editTextUdetails"
        android:id="@+id/buttonUpdate"
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_toRightOf="@id/buttonUpdate"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/editTextUdetails"
        android:id="@+id/buttonCancle"
        android:text="Cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
