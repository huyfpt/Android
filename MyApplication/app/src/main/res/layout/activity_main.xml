<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:backgroundTint="#685555"
    android:backgroundTintMode="screen"
    android:baselineAligned="false"
    android:clickable="false"
    android:weightSum="10">
   <LinearLayout

       android:layout_height="0dp"
       android:layout_width="match_parent"
       android:layout_weight="3"
       android:background="#e000"
       >
       <TextView
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="3"
           android:textSize="45sp"
           android:textColor="#fff"
           android:text="1" />
       <TextView
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="3"
           android:textSize="45sp"
           android:textColor="#fff"
           android:background="#ee948f8f"
           android:text=" 2" />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:layout_weight="2"
        android:background="#eeed3131"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:textSize="45sp"
            android:textColor="#fff"
            android:text="3" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="45sp"
            android:textColor="#fff"
            android:background="#e000"
            android:text=" 4" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="45sp"
        android:backgroundTint="#e5db7a"
        android:text="Background tint" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="45sp"
        android:background="#287497"
        android:text="Both together"
        android:backgroundTintMode="multiply" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.96"
        android:text="Hello Guy"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:textColor="#ee2fbc25"
        android:backgroundTint="#4d3030"
        android:background="#810c0c" />





</LinearLayout>