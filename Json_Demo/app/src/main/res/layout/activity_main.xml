<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.demo25.json_demo.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JSON-Object"
        android:id="@+id/buttonJObject"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JSON-Array"
        android:id="@+id/buttonJArray"
        android:layout_below="@+id/buttonJObject"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JSON-Object-Advan----Vn"
        android:id="@+id/buttonVn"
        android:layout_below="@+id/buttonJArray"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JSON-Object-Advan----En"
        android:id="@+id/buttonEn"
        android:layout_below="@+id/buttonVn"
        android:layout_alignEnd="@+id/buttonVn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewObject"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:layout_below="@+id/buttonobob"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JsonObject,object"
        android:id="@+id/buttonobob"
        android:layout_below="@+id/buttonEn"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_toEndOf="@+id/buttonVn"
        android:layout_alignBottom="@+id/textViewObject" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="read php file"
        android:id="@+id/buttonphp"
        android:layout_below="@+id/buttonobob"
        android:layout_alignEnd="@+id/buttonJArray" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VolleyProduct_Php"
        android:id="@+id/buttonVphp"
        android:layout_below="@+id/buttonphp"
        android:layout_alignParentStart="true" />

</RelativeLayout>
